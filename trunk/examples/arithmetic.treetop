grammar Arithmetic
  rule additive
    number '+' additive {
      def value
        arg_1.value + arg_2.value
      end
      
      def arg_1
        elements[0]
      end
      
      def arg_2
        elements[2]
      end
    }
    /
    number
  end
  
  rule number
    ([1-9] [0-9]*) {
      def value
        text_value.to_i
      end
    }
  end
end